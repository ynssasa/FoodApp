<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profil">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:gravity="center"
        android:text="Profil"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="118dp"
        android:fontFamily="@font/source_sans_pro_bold"
        android:gravity="center"
        android:text="Merhaba"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/urunAyarlarTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="118dp"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center"
        android:text="Ürün Ayarları"
        android:textColor="#FF5722"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siparislerimGit" />

    <TextView
        android:id="@+id/cikisYapTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="118dp"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center"
        android:text="Çıkış Yap"
        android:textColor="#FF5722"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/urunAyarlarTxt" />

    <TextView
        android:id="@+id/siparislerimGit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="118dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="118dp"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center"
        android:text="Siparişlerim"
        android:textColor="#FF5722"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_weight="0.9"
        app:layout_constraintBottom_toTopOf="@+id/bottom12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/name"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:width="200dp"
            android:background="@drawable/textradius"
            android:ems="10"
            android:hint="Ad soyad giriniz"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="326dp" />

        <EditText
            android:id="@+id/adress"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:width="200dp"
            android:background="@drawable/textradius"
            android:ems="10"
            android:hint="Adres giriniz"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="326dp" />

        <EditText
            android:id="@+id/phoneNo"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@id/adress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:width="200dp"
            android:background="@drawable/textradius"
            android:ems="10"
            android:hint="Telefon numarası giriniz"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="326dp" />

        <EditText
            android:id="@+id/cuzdanAdress"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@id/phoneNo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:width="200dp"
            android:background="@drawable/textradius"
            android:ems="10"
            android:hint="Cüzdan Adresi Girin"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="326dp" />
        <EditText
            android:id="@+id/emailAdress"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@id/cuzdanAdress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:width="200dp"
            android:background="@drawable/textradius"
            android:ems="10"
            android:hint="Email giriniz"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="326dp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@id/emailAdress"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:width="200dp"
            android:background="@drawable/textradius"
            android:ems="10"
            android:hint="Şifre giriniz"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="326dp" />

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_below="@id/password"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:width="200dp"
            android:background="@drawable/textradius"
            android:ems="10"
            android:hint="Tekrar Şifre giriniz"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            app:layout_constraintCircleRadius="@dimen/cardview_default_radius"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="326dp" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="142dp"
            android:layout_height="61dp"

            android:layout_below="@id/confirmPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btnround"
            android:backgroundTint="#FF671D"
            android:fontFamily="@font/source_sans_pro"
            android:text="Güncelle"
            android:textColor="@color/white"
            android:textSize="24sp" />


    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom12"
        app:itemBackground="@color/gray2"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/alt_menu"
        app:layout_constraintBottom_toBottomOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>